private Pane createCSVImportPanel() {
    VBox panel = new VBox(20);
    panel.setPadding(new Insets(20));
    
    // 拖拽区域
    Rectangle dropZone = new Rectangle(400, 200);
    dropZone.setFill(Color.LIGHTGRAY);
    dropZone.setStroke(Color.DARKGRAY);
    dropZone.setStrokeWidth(2);
    dropZone.setArcWidth(20);
    dropZone.setArcHeight(20);
    
    Label dropLabel = new Label("拖拽CSV文件到此区域\n(最大10MB)");
    dropLabel.setStyle("-fx-font-size: 16; -fx-text-fill: #555;");
    StackPane.setAlignment(dropLabel, Pos.CENTER);
    StackPane dropPane = new StackPane(dropZone, dropLabel);
    
    // 拖拽事件处理
    dropPane.setOnDragOver(e -> {
        if (e.getDragboard().hasFiles()) {
            dropZone.setFill(Color.rgb(200, 230, 200));
            e.acceptTransferModes(TransferMode.COPY);
        }
    });
    
    dropPane.setOnDragExited(e -> dropZone.setFill(Color.LIGHTGRAY));
    
    dropPane.setOnDragDropped(e -> {
        File file = e.getDragboard().getFiles().get(0);
        if (file.getName().toLowerCase().endsWith(".csv")) {
            if (file.length() > 10_000_000) {
                showErrorAlert("文件过大", "CSV文件不能超过10MB");
            } else {
                parseCSVFile(file); // CSV解析逻辑
                dropLabel.setText("已导入: " + file.getName());
                dropZone.setFill(Color.rgb(200, 255, 200));
            }
        }
    });
    
    panel.getChildren().addAll(dropPane, createPlatformSelector());
    return panel;
}