class BudgetViewTest {
    @Test
    void testBudgetCardColors() {
        BudgetCategory under = new BudgetCategory("Test", 100, 80);
        BudgetCategory over = new BudgetCategory("Test", 100, 120);
        
        BudgetCard underCard = new BudgetCard(under);
        BudgetCard overCard = new BudgetCard(over);
        
        // 验证进度条颜色
        assertTrue(underCard.getProgressBar().getStyle().contains("2ecc71"));
        assertTrue(overCard.getProgressBar().getStyle().contains("e74c3c"));
    }
}
