// 分类管理界面
public class AIClassificationView extends VBox {
    private TableView<Transaction> transactionTable = new TableView<>();
    
    public AIClassificationView() {
        // 表格设置
        TableColumn<Transaction, String> descCol = new TableColumn<>("描述");
        TableColumn<Transaction, String> aiCategoryCol = new TableColumn<>("AI分类");
        TableColumn<Transaction, String> userCategoryCol = new TableColumn<>("用户分类");
        
        // 添加数据绑定和单元格工厂
        transactionTable.getColumns().addAll(descCol, aiCategoryCol, userCategoryCol);
        
        // AI学习反馈面板
        HBox feedbackPanel = createFeedbackPanel();
        
        // 季节性分析图表
        LineChart<String, Number> seasonalChart = createSeasonalChart();
        
        this.getChildren().addAll(transactionTable, feedbackPanel, seasonalChart);
    }
}
