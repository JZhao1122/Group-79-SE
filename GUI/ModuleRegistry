// 模块化架构核心
public class ModuleRegistry {
    private static Map<String, Consumer<BorderPane>> modules = new HashMap<>();
    
    public static void registerModule(String name, Consumer<BorderPane> initializer) {
        modules.put(name, initializer);
    }
    
    public static void activateModule(String name, BorderPane root) {
        if (modules.containsKey(name)) {
            modules.get(name).accept(root);
        }
    }
}

// 新模块注册示例
ModuleRegistry.registerModule("investment", root -> {
    root.setCenter(new InvestmentPortfolioView());
});
